<h4 class="card-title mt-3 text-center">Create new article</h4>

<form action="/teacher/postarticle" method="post">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="title" id="titile" class="form-control" required>
    </div>        
    
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea type="text" name="description" id="description" class="form-control"  required></textarea>
    </div>

    <div class="mb-3">
        <label for="markdown" class="form-label">Markdown</label>
        <textarea type="text" name="markdown" id="markdown" class="form-control" style="height: 100px" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
