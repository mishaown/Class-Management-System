<div class="container">
<div class="row justify-content-center mx-auto" style="max-width: 480px;">
	<div class="card card-body">
		<h4 class="card-title mt-3 text-center">Add New User</h4>
		<!-- EJS ERROR MESSGES -->
		<%- include('../partials/messages')  %> 
		<!-- END -->
		<form action="/admin/create" method="POST">
			<select class="custom-select my-2 mr-sm-2" id="role" name="role">
				<option value="" selected>Choose...</option>
				<option value="student">Student</option>
				<option value="teacher">Teacher</option>
				<option value="employee">Employee</option>
			</select>
			<div class="form-group">
				<label for="id">ID Number</label>
				<input 
				type="text"
				name="id" 
				class="form-control my-1 mr-2"
				value="<%= typeof id != 'undefined' ? id : '' %>">
			</div>
			<div class="form-group">
				<label for="name">User Name</label>
				<input 
				type="text" 
				name="name" 
				class="form-control my-1 mr-2"
				value="<%= typeof name != 'undefined' ? name : '' %>">
			</div>
			<div class="form-group">
				<label for="name">Email</label>
				<input 
				type="email" 
				name="email" 
				class="form-control my-1 mr-2"
				value="<%= typeof email != 'undefined' ? email : '' %>">
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" 
				name="password"
				class="form-control my-1 mr-2"
				value="<%= typeof password != 'undefined' ? password : '' %>">
			</div>
			<input type="submit" value="Register"
			class="btn btn-primary btn-block">
		</form>
	</div>
</div>
</div>